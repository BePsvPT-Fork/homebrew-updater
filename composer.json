{
  "version": "1.0.5",
  "name": "bepsvpt/homebrew-updater",
  "description": "Automatically check release of homebrew formulas.",
  "keywords": ["homebrew"],
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "bepsvpt",
      "email": "og7lsrszah6y3lz@infinitefa.email"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "ext-sqlite3": "*",
    "composer/semver": "1.5.*",
    "doctrine/dbal": "2.10.*",
    "fideloper/proxy": "4.2.*",
    "guzzlehttp/guzzle": "6.5.*",
    "knplabs/github-api": "2.12.*",
    "laravel/framework": "^6.9",
    "laravel/slack-notification-channel": "^2.0",
    "laravel/tinker": "2.0.*",
    "league/uri": "6.0.*",
    "php-http/guzzle6-adapter": "2.0.*",
    "symfony/process": "4.4.*"
  },
  "require-dev": {
    "facade/ignition": "1.13.*",
    "fzaninotto/faker": "1.9.*",
    "mockery/mockery": "1.3.*",
    "nunomaduro/collision": "3.0.*",
    "phpunit/phpunit": "8.5.*"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "notify-on-install": false,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "updater:install": [
      "@php -r \"touch('database/database.sqlite');\"",
      "@php -r \"copy('.env.example', '.env');\"",
      "@composer install --no-dev -o --ansi",
      "@php artisan key:generate --ansi",
      "@php artisan migrate --force --ansi"
    ],
    "updater:upgrade": [
      "git pull --rebase --autostash",
      "@composer install --no-dev -o --ansi",
      "@php artisan migrate --force --ansi"
    ]
  }
}
